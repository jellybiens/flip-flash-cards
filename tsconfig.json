{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2016", "es2017", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@ui-kit": ["./packages/ui-kit/src"],
      "@types": ["./packages/types"],
      "@gql-schema": ["./packages/gql-schema"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es5"
  },
  "exclude": ["node_modules"]
}
